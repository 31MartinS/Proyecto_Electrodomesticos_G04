@{
    ViewData["Title"] = "Menú Principal";
    var usuario = ViewBag.Usuario ?? "Usuario";
}

<div class="menu-container">
    <h1 class="menu-title">Prueba Parcial 1</h1>
    <h2 class="menu-subtitle">Bienvenido, @usuario</h2>

    <div class="menu-buttons">
        <a asp-controller="Inventario" asp-action="Index" class="btn-menu btn-inventario">
            Editar Inventario
        </a>

        <a asp-controller="Ventas" asp-action="Cedula" class="btn-menu btn-venta">
            Realizar Venta
        </a>

        <a asp-controller="Facturas" asp-action="Index" class="btn-menu btn-facturas">
            Historial de Facturas
        </a>
    </div>
</div>

<style>
    .menu-container {
        text-align: center;
        margin-top: 40px;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .menu-title {
        font-size: 2.8rem;
        font-weight: 800;
        margin-bottom: 10px;
    }

    .menu-subtitle {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 50px;
    }

    .menu-buttons {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-top: 20px;
        flex-wrap: wrap;
    }

    .btn-menu {
        padding: 15px 35px;
        border-radius: 35px;
        text-decoration: none;
        font-size: 1.3rem;
        font-weight: 600;
        display: inline-block;
        border: none;
    }

    .btn-inventario {
        background-color: #9AFF9A;
        color: #000;
    }

        .btn-inventario:hover {
            background-color: #82f082;
        }

    .btn-venta {
        background-color: #ffe391;
        color: #000;
        border: 3px solid #c7b6ff; /* borde morado como en la imagen */
    }

        .btn-venta:hover {
            background-color: #f9d978;
        }

    .btn-facturas {
        background-color: #B8E0FF;
        color: #000;
    }

        .btn-facturas:hover {
            background-color: #A0D0FF;
        }
</style>
