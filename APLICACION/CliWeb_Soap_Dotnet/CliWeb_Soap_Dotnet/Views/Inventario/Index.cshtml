@model IEnumerable<ClienteWeb.Models.ProductoDto>

@{
    ViewData["Title"] = "Inventario de productos";
}

<h2 class="text-center mb-4" style="font-weight:700;">Editar Inventario</h2>

<table class="table align-middle" style="font-size: 1.1rem;">
    <thead>
        <tr>
            <th style="width: 40%">Producto</th>
            <th style="width: 15%">Precio</th>
            <th style="width: 30%">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    <div style="display:flex; align-items:center; gap:15px;">
                        <!-- Imagen -->
                        @if (!string.IsNullOrEmpty(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl"
                                 alt="@p.Nombre"
                                 style="width:70px; height:70px; object-fit:cover; border-radius:12px; border:1px solid #ccc;" />
                        }
                        else
                        {
                            <div style="width:70px; height:70px; background:#eee; border-radius:12px;
                                        display:flex; justify-content:center; align-items:center; font-size:0.8rem; color:#777;">
                                Sin foto
                            </div>
                        }

                        <!-- Nombre + Descripción -->
                        <div>
                            <div style="font-weight:600;">@p.Nombre</div>
                            @if (!string.IsNullOrEmpty(p.Descripcion))
                            {
                                <div style="color:#777; font-size:0.9rem;">
                                    @p.Descripcion
                                </div>
                            }
                        </div>
                    </div>
                </td>

                <td style="font-weight:600;">
                    @p.PrecioVenta.ToString("C2")
                </td>

                <td>
                    <a asp-action="Editar" asp-route-id="@p.IdProducto"
                       class="btn btn-info"
                       style="padding:8px 18px; font-size:1rem; border-radius:30px; color:white;">
                        Editar
                    </a>

                    <a asp-action="Eliminar" asp-route-id="@p.IdProducto"
                       class="btn btn-danger ms-3"
                       style="padding:8px 18px; font-size:1rem; border-radius:30px;">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-4">
    <a asp-action="Crear"
       class="btn"
       style="background:#8cff9f; padding:12px 35px; font-size:1.2rem; border-radius:30px; font-weight:600;">
        Crear Producto
    </a>

    <a asp-controller="Home" asp-action="Menu"
       class="btn ms-3"
       style="background:#d8d8d8; padding:12px 35px; font-size:1.2rem; border-radius:30px; font-weight:600;">
        Volver
    </a>
</div>



<style>
    .inventory-wrapper {
        width: 85%;
        margin: auto;
        text-align: center;
        font-family: 'Segoe UI', Arial;
    }

    .title {
        font-size: 2.3rem;
        font-weight: 800;
        margin-bottom: 2rem;
    }

    .inventory-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2rem;
        font-size: 1.2rem;
    }

        .inventory-table th,
        .inventory-table td {
            padding: 1rem;
            border-bottom: 2px solid black;
        }

        .inventory-table th {
            font-weight: 700;
        }

    .actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn-edit {
        background-color: #36A3FF;
        color: white;
        padding: 0.6rem 1.5rem;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
    }

        .btn-edit:hover {
            background-color: #1c8de0;
        }

    .btn-delete {
        background-color: #FF6B6B;
        color: white;
        padding: 0.6rem 1.5rem;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
    }

        .btn-delete:hover {
            background-color: #e55757;
        }

    .buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }

    .btn-create {
        background-color: #9AFF9A;
        padding: 0.8rem 3rem;
        font-size: 1.2rem;
        border-radius: 30px;
        text-decoration: none;
        color: black;
        font-weight: 600;
    }

        .btn-create:hover {
            background-color: #82f082;
        }

    .btn-back {
        background-color: #D9D9D9;
        padding: 0.8rem 3rem;
        font-size: 1.2rem;
        border-radius: 30px;
        text-decoration: none;
        color: black;
        font-weight: 600;
    }

        .btn-back:hover {
            background-color: #c8c8c8;
        }
</style>
