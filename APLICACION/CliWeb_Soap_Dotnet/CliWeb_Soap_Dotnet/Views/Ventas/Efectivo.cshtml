@model ClienteWeb.Models.VentaEfectivoViewModel

@{
    ViewData["Title"] = "Pago en efectivo";
}

<div style="text-align:center; margin-top:40px;">

    <!-- Título -->
    <h1 style="
        font-size:40px;
        font-weight:700;
        margin-bottom:60px;">
        Pago en Efectivo
    </h1>

    <!-- Texto + cajita del total -->
    <div style="
        display:flex;
        justify-content:center;
        align-items:center;
        gap:25px;
        margin-bottom:80px;
        font-size:22px;">
        <span><strong>Total a pagar con descuento (33%):</strong></span>

        <div style="
            min-width:260px;
            padding:12px 24px;
            background:#eef1f7;
            border-radius:999px;
            box-shadow: 0 6px 12px rgba(0,0,0,0.06) inset;">
            <span style="font-size:22px; font-weight:500;">
                @Model.Total.ToString("C2")
            </span>
        </div>
    </div>

    <!-- Formulario para confirmar pago -->
    <form asp-action="Efectivo" method="post" style="margin-bottom:40px;">
        @* Campos ocultos necesarios en el POST *@
        <input type="hidden" asp-for="Cedula" />
        <input type="hidden" asp-for="IdProducto" />
        <input type="hidden" asp-for="NombreProducto" />
        <input type="hidden" asp-for="PrecioProducto" />
        <input type="hidden" asp-for="Subtotal" />
        <input type="hidden" asp-for="Descuento" />
        <input type="hidden" asp-for="Total" />

        <button type="submit"
                style="
                    display:block;
                    margin:0 auto;
                    width:60%;
                    max-width:520px;
                    padding:18px 30px;
                    border:none;
                    border-radius:999px;
                    background:#7CFF8A;
                    font-size:22px;
                    font-weight:600;
                    cursor:pointer;">
            Confirmar Pago y Generar Factura
        </button>
    </form>

    <!-- Botón Volver -->
    <a asp-action="Productos"
       asp-route-cedula="@Model.Cedula"
       style="
            display:inline-block;
            margin-top:10px;
            width:40%;
            max-width:360px;
            padding:18px 30px;
            border-radius:999px;
            background:#dcdcdc;
            color:#000;
            text-decoration:none;
            font-size:22px;
            font-weight:600;">
        Volver
    </a>
</div>
