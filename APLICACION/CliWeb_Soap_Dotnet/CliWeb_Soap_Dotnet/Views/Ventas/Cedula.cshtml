@model ClienteWeb.Models.VentaCedulaViewModel

@{
    ViewData["Title"] = "Realizar venta";
}

<div style="text-align:center; margin-top:40px;">

    <!-- Título -->
    <h1 style="
        font-size:40px;
        font-weight:700;
        margin-bottom:60px;">
        Realizar Venta
    </h1>

    <form asp-action="Cedula" method="post">

        <!-- Texto + caja de cédula -->
        <div style="
            display:flex;
            justify-content:center;
            align-items:center;
            gap:25px;
            margin-bottom:40px;
            font-size:22px;">
            <label asp-for="Cedula" style="margin:0;">
                Ingrese cédula del cliente:
            </label>

            <input asp-for="Cedula"
                   style="
                        min-width:260px;
                        padding:12px 24px;
                        background:#eef1f7;
                        border-radius:999px;
                        border:none;
                        box-shadow: 0 6px 12px rgba(0,0,0,0.06) inset;
                        font-size:20px;" />
        </div>

        @if (!string.IsNullOrEmpty(Model?.Error))
        {
            <div style="
                margin:0 auto 20px auto;
                max-width:480px;
                color:#b00020;
                font-weight:600;">
                @Model.Error
            </div>
        }

        <!-- Botón Continuar -->
        <button type="submit"
                style="
                    display:block;
                    margin:0 auto 18px auto;
                    width:60%;
                    max-width:520px;
                    padding:18px 30px;
                    border:none;
                    border-radius:999px;
                    background:#7CFF8A;
                    font-size:22px;
                    font-weight:600;
                    cursor:pointer;">
            Continuar
        </button>
    </form>

    <!-- Botón Volver -->
    <a asp-controller="Home" asp-action="Menu"
       style="
            display:inline-block;
            margin-top:0;
            width:40%;
            max-width:360px;
            padding:18px 30px;
            border-radius:999px;
            background:#dcdcdc;
            color:#000;
            text-decoration:none;
            font-size:22px;
            font-weight:600;">
        Volver
    </a>
</div>
