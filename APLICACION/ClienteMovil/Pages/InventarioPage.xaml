<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClienteMovil.Pages.InventarioPage"
             Title="GestiÃ³n de Inventario"
             BackgroundColor="#FFFFFF">
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        
        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="10">
            <Label Text="Inventario de Productos"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#000000"/>
        </StackLayout>

        <!-- Lista de Productos -->
        <ScrollView Grid.Row="1">
            <CollectionView x:Name="ProductosCollection" Margin="5">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#D9D9D9"
                               Margin="5"
                               Padding="10"
                               BackgroundColor="#FFFFFF"
                               CornerRadius="10"
                               HasShadow="True">
                            <Grid ColumnDefinitions="80,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10">
                                
                                <!-- Imagen del producto -->
                                <Image Grid.Column="0" Grid.RowSpan="4"
                                       Source="{Binding ImageUrl}"
                                       Aspect="AspectFit"
                                       WidthRequest="70"
                                       HeightRequest="70"
                                       VerticalOptions="Center"/>
                                
                                <!-- InformaciÃ³n del producto -->
                                <Label Grid.Column="1" Grid.Row="0"
                                       Text="{Binding Nombre}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#000000"/>
                                
                                <Label Grid.Column="1" Grid.Row="1"
                                       Text="{Binding Codigo, StringFormat='CÃ³digo: {0}'}"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                
                                <Label Grid.Column="1" Grid.Row="2"
                                       Text="{Binding Descripcion}"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                
                                <Label Grid.Column="1" Grid.Row="3"
                                       Text="{Binding PrecioVenta, StringFormat='${0:N2}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#4A90E2"/>
                                
                                <!-- Botones de acciÃ³n -->
                                <VerticalStackLayout Grid.Column="2" Grid.RowSpan="4" Spacing="5" VerticalOptions="Center">
                                    <Button Text="âœï¸ Editar"
                                            BackgroundColor="#4A90E2"
                                            TextColor="#FFFFFF"
                                            FontSize="12"
                                            Padding="10,5"
                                            CornerRadius="8"
                                            Clicked="OnEditarClicked"
                                            CommandParameter="{Binding .}"/>
                                    
                                    <Button Text="ðŸ—‘ï¸ Eliminar"
                                            BackgroundColor="#F46A6A"
                                            TextColor="#FFFFFF"
                                            FontSize="12"
                                            Padding="10,5"
                                            CornerRadius="8"
                                            Clicked="OnEliminarClicked"
                                            CommandParameter="{Binding .}"/>
                                </VerticalStackLayout>
                                
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Botones inferiores -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10" Padding="10">
            <Button Grid.Column="0"
                    Text="NUEVO PRODUCTO"
                    BackgroundColor="#96FF96"
                    TextColor="#000000"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnNuevoProductoClicked"/>
            
            <Button Grid.Column="1"
                    Text="VOLVER"
                    BackgroundColor="#D9D9D9"
                    TextColor="#000000"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnVolverClicked"/>
        </Grid>
        
    </Grid>
</ContentPage>
