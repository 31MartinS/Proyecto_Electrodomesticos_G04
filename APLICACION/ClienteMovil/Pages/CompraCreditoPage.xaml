<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ClienteMovil.Pages.CompraCreditoPage"
             Title="Pago a Crédito"
             BackgroundColor="#FFFFFF">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Pago con Crédito"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"
                   TextColor="#000000"/>
            
            <!-- Producto Info -->
            <Frame CornerRadius="15" HasShadow="True" Padding="15" BackgroundColor="White">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding Producto.Nombre}"
                           FontSize="18"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Producto.PrecioVenta, StringFormat='Precio: ${0:N2}'}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FFB300"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Evaluación de Crédito -->
            <Frame x:Name="FrameEvaluacion" 
                   CornerRadius="10" 
                   HasShadow="False" 
                   Padding="15" 
                   BackgroundColor="#2ECC71"
                   IsVisible="False"
                   Margin="0,10,0,10">
                <Label Text="Usuario elegible para crédito"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#FFFFFF"
                       HorizontalOptions="Center"/>
            </Frame>
            
            <!-- Información de crédito -->
            <Frame x:Name="FrameInfoCredito"
                   CornerRadius="15" 
                   HasShadow="True" 
                   Padding="20" 
                   BackgroundColor="White"
                   IsVisible="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Monto Máximo Aprobado:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#000000"/>
                    <Label x:Name="LblMontoMaximo" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#000000"/>
                    
                    <!-- Selector de Cuotas -->
                    <VerticalStackLayout x:Name="PanelCuotas" IsVisible="False" Spacing="10" Margin="0,10,0,0">
                        <Label Text="Seleccione número de cuotas:" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#000000"/>
                        <Picker x:Name="PickerCuotas" 
                                Title="Cuotas" 
                                FontSize="16"/>
                        
                        <Button Text="CONFIRMAR COMPRA"
                                BackgroundColor="#96FF96"
                                TextColor="#000000"
                                CornerRadius="25"
                                HeightRequest="50"
                                FontAttributes="Bold"
                                Margin="0,10,0,0"
                                Clicked="OnConfirmarCompraClicked"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <ActivityIndicator x:Name="Loading" IsRunning="False" Color="#4A90E2"/>
            
            <Button Text="CANCELAR"
                    BackgroundColor="#D9D9D9"
                    TextColor="#000000"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Clicked="OnCancelarClicked"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
