<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClienteMovil.Pages.FacturasHistorialPage"
             Title="Historial de Facturas"
             BackgroundColor="#FFFFFF">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        
        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="10">
            <Label Text="Mis Facturas"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#000000"/>
        </StackLayout>

        <!-- Lista de Facturas -->
        <ScrollView Grid.Row="1">
            <StackLayout x:Name="StackFacturas" Spacing="10" Padding="10">
                <!-- Las facturas se cargarÃ¡n dinÃ¡micamente aquÃ­ -->
            </StackLayout>
        </ScrollView>

        <!-- Mensaje cuando no hay facturas -->
        <StackLayout x:Name="StackSinFacturas" 
                     Grid.Row="1" 
                     IsVisible="False"
                     VerticalOptions="Center"
                     Padding="20">
            <Label Text="ðŸ“‹"
                   FontSize="60"
                   HorizontalOptions="Center"/>
            <Label Text="No hay facturas registradas"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="#666666"
                   Margin="0,10,0,0"/>
        </StackLayout>

        <!-- BotÃ³n Volver -->
        <Button Grid.Row="2"
                Text="VOLVER"
                BackgroundColor="#D9D9D9"
                TextColor="#000000"
                FontAttributes="Bold"
                CornerRadius="25"
                HeightRequest="50"
                Margin="10"
                Clicked="OnVolverClicked"/>
        
    </Grid>
</ContentPage>
