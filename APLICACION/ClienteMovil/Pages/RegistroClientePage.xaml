<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ClienteMovil.Pages.RegistroClientePage"
             Title="Registro de Cliente"
             BackgroundColor="#FFFFFF">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="Registro de Cliente"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"
                   TextColor="#000000"/>
            
            <!-- Cédula (readonly) -->
            <Label Text="Cédula:" FontSize="14" TextColor="#000000"/>
            <Frame CornerRadius="10" HasShadow="False" BackgroundColor="White" Padding="15,0">
                <Entry x:Name="EntCedula" IsReadOnly="True" FontSize="16" TextColor="#000000"/>
            </Frame>
            
            <!-- Nombres -->
            <Label Text="Nombres:" FontSize="14" TextColor="#000000"/>
            <Frame CornerRadius="10" HasShadow="False" BackgroundColor="White" Padding="15,0">
                <Entry x:Name="EntNombres" Placeholder="Nombres" FontSize="16" TextColor="#000000" PlaceholderColor="#999999"/>
            </Frame>
            
            <!-- Apellidos -->
            <Label Text="Apellidos:" FontSize="14" TextColor="#000000"/>
            <Frame CornerRadius="10" HasShadow="False" BackgroundColor="White" Padding="15,0">
                <Entry x:Name="EntApellidos" Placeholder="Apellidos" FontSize="16" TextColor="#000000" PlaceholderColor="#999999"/>
            </Frame>
            
            <!-- Dirección -->
            <Label Text="Dirección:" FontSize="14" TextColor="#000000"/>
            <Frame CornerRadius="10" HasShadow="False" BackgroundColor="White" Padding="15,0">
                <Entry x:Name="EntDireccion" Placeholder="Dirección" FontSize="16" TextColor="#000000" PlaceholderColor="#999999"/>
            </Frame>
            
            <!-- Teléfono -->
            <Label Text="Teléfono:" FontSize="14" TextColor="#000000"/>
            <Frame CornerRadius="10" HasShadow="False" BackgroundColor="White" Padding="15,0">
                <Entry x:Name="EntTelefono" Placeholder="Teléfono" Keyboard="Telephone" FontSize="16" TextColor="#000000" PlaceholderColor="#999999"/>
            </Frame>
            
            <!-- Email -->
            <Label Text="Email:" FontSize="14" TextColor="#000000"/>
            <Frame CornerRadius="10" HasShadow="False" BackgroundColor="White" Padding="15,0">
                <Entry x:Name="EntEmail" Placeholder="Email" Keyboard="Email" FontSize="16" TextColor="#000000" PlaceholderColor="#999999"/>
            </Frame>
            
            <!-- Botones -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Text="REGISTRAR"
                        BackgroundColor="#96FF96"
                        TextColor="#000000"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnRegistrarClicked"
                        Grid.Column="0"/>
                
                <Button Text="CANCELAR"
                        BackgroundColor="#D9D9D9"
                        TextColor="#000000"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnCancelarClicked"
                        Grid.Column="1"/>
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
