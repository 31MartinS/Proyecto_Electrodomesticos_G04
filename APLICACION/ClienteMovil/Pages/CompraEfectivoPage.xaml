<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ClienteMovil.Pages.CompraEfectivoPage"
             Title="Pago en Efectivo"
             BackgroundColor="#FFFFFF">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Pago en Efectivo"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"
                   TextColor="#000000"/>
            
            <Label Text="Total a pagar con descuento (33%):"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#000000"
                   Margin="0,0,0,10"/>
            
            <!-- Producto Info -->
            <Frame CornerRadius="15" HasShadow="True" Padding="15" BackgroundColor="White">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding Producto.Nombre}"
                           FontSize="18"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Producto.Descripcion}"
                           FontSize="14"
                           TextColor="#666"/>
                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,10"/>
                    <Label Text="{Binding Subtotal, StringFormat='Subtotal: ${0:N2}'}"
                           FontSize="16"/>
                    <Label Text="{Binding Descuento, StringFormat='Descuento (33%): -${0:N2}'}"
                           FontSize="16"
                           TextColor="#4CAF50"/>
                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,10"/>
                    <Label Text="{Binding Total, StringFormat='TOTAL: ${0:N2}'}"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#4CAF50"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Botones -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Text="CONFIRMAR"
                        BackgroundColor="#96FF96"
                        TextColor="#000000"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnConfirmarClicked"
                        Grid.Column="0"/>
                
                <Button Text="CANCELAR"
                        BackgroundColor="#D9D9D9"
                        TextColor="#000000"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnCancelarClicked"
                        Grid.Column="1"/>
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
