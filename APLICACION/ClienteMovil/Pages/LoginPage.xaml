<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ClienteMovil.Pages.LoginPage"
             Title="Login - Sistema de Ventas"
             BackgroundColor="#FFFFFF">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            
            <Label Text="Comercializadora"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#000000"
                   Margin="0,40,0,10"/>
            
            <Label Text="Sistema de Ventas"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="#000000"
                   Margin="0,0,0,30"/>
            
            <Label Text="Usuario:"
                   FontSize="14"
                   TextColor="#000000"
                   Margin="0,10,0,5"/>
            
            <!-- Input de Usuario -->
            <Frame CornerRadius="25"
                   HasShadow="False"
                   Padding="0"
                   BorderColor="#CCCCCC"
                   BackgroundColor="White">
                <Entry x:Name="EntUsuario"
                       Placeholder="Ingrese su usuario"
                       PlaceholderColor="#999999"
                       TextColor="#000000"
                       FontSize="16"
                       Margin="15,10"/>
            </Frame>
            
            <Label Text="Contraseña:"
                   FontSize="14"
                   TextColor="#000000"
                   Margin="0,10,0,5"/>
            
            <!-- Input de Contraseña -->
            <Frame CornerRadius="25"
                   HasShadow="False"
                   Padding="0"
                   BorderColor="#CCCCCC"
                   BackgroundColor="White">
                <Entry x:Name="EntPassword"
                       Placeholder="Ingrese su contraseña"
                       PlaceholderColor="#999999"
                       TextColor="#000000"
                       IsPassword="True"
                       FontSize="16"
                       Margin="15,10"/>
            </Frame>
            
            <!-- Mensaje de error -->
            <Frame x:Name="ErrorPanel" 
                   BackgroundColor="#F46A6A" 
                   CornerRadius="10" 
                   Padding="10" 
                   Margin="0,10,0,0"
                   IsVisible="False">
                <Label Text="Usuario o contraseña incorrectos" 
                       TextColor="#000000" 
                       FontSize="14" 
                       HorizontalOptions="Center"/>
            </Frame>
            
            <!-- Botón Ingresar -->
            <Button x:Name="BtnIngresar"
                    Text="INGRESAR"
                    BackgroundColor="#96FF96"
                    TextColor="#000000"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnIngresarClicked"/>
            
            <!-- Mensaje de error -->
            <Label x:Name="LblError"
                   IsVisible="False"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"/>
                   
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
