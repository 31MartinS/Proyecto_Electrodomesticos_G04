<Window x:Class="ClienteEscritorio.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú Principal - Prueba Parcial 2" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Título principal -->
            <TextBlock Text="Prueba Parcial 2" Style="{StaticResource MainTitle}"/>
            
            <!-- Subtítulo con bienvenida -->
            <TextBlock Text="Bienvenido, Monster" Style="{StaticResource SubTitle}" Margin="0,10,0,50"/>
            
            <!-- Botón Editar Inventario -->
            <Button Content="Editar Inventario" 
                    Style="{StaticResource PillButton}"
                    Background="{StaticResource GreenButtonBrush}"
                    Width="300"
                    Height="50"
                    FontSize="18"
                    Margin="0,10"
                    Click="BtnEditarInventario_Click"/>
            
            <!-- Botón Realizar Venta -->
            <Button Content="Realizar Venta" 
                    Style="{StaticResource PillButton}"
                    Background="#FFD700"
                    Width="300"
                    Height="50"
                    FontSize="18"
                    Margin="0,10"
                    Click="BtnRealizarVenta_Click"/>
            
            <!-- Botón Ver Facturas -->
            <Button Content="Ver Facturas" 
                    Style="{StaticResource PillButton}"
                    Background="#4A90E2"
                    Foreground="White"
                    Width="300"
                    Height="50"
                    FontSize="18"
                    Margin="0,10"
                    Click="BtnVerFacturas_Click"/>
        </StackPanel>
    </Grid>
</Window>
