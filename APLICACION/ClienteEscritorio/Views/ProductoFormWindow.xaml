<Window x:Class="ClienteEscritorio.Views.ProductoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Producto" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="30">
        <StackPanel>
            <TextBlock x:Name="TxtTitulo" Text="Crear Producto" Style="{StaticResource MainTitle}"/>

            <!-- Código -->
            <TextBlock Text="Código:" FontSize="14" Margin="0,20,0,5"/>
            <TextBox x:Name="TxtCodigo" Style="{StaticResource PillTextBox}"/>

            <!-- Nombre -->
            <TextBlock Text="Nombre:" FontSize="14" Margin="0,15,0,5"/>
            <TextBox x:Name="TxtNombre" Style="{StaticResource PillTextBox}"/>

            <!-- Descripción -->
            <TextBlock Text="Descripción:" FontSize="14" Margin="0,15,0,5"/>
            <TextBox x:Name="TxtDescripcion" 
                     Style="{StaticResource PillTextBox}"
                     TextWrapping="Wrap"
                     Height="80"
                     VerticalScrollBarVisibility="Auto"/>

            <!-- Precio -->
            <TextBlock Text="Precio de Venta:" FontSize="14" Margin="0,15,0,5"/>
            <TextBox x:Name="TxtPrecio" Style="{StaticResource PillTextBox}"/>

            <!-- Botón Subir Imagen -->
            <Button x:Name="BtnSubirImagen"
                    Content="Subir Imagen" 
                    Style="{StaticResource PillButton}"
                    Background="#FF6C63FF"
                    Width="200"
                    Margin="0,20,0,0"
                    Click="BtnSubirImagen_Click"/>
            <TextBlock x:Name="TxtImagenInfo" 
                       Text="Nota: Primero guarde el producto para poder subir una imagen" 
                       FontSize="11" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Guardar" 
                        Style="{StaticResource PillButton}"
                        Background="{StaticResource GreenButtonBrush}"
                        Width="150"
                        Margin="10,0"
                        Click="BtnGuardar_Click"/>
                
                <Button Content="Cancelar" 
                        Style="{StaticResource PillButton}"
                        Background="{StaticResource GrayButtonBrush}"
                        Width="150"
                        Margin="10,0"
                        Click="BtnCancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
