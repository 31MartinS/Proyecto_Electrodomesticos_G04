<Window x:Class="ClienteEscritorio.Views.VentaProductosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ClienteEscritorio.Converters"
        Title="ElectrodomÃ©sticos" 
        Height="650" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded">
    <Window.Resources>
        <converters:ImageUrlConverter x:Key="ImageUrlConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo principal -->
        <TextBlock Text="ElectrodomÃ©sticos" Style="{StaticResource MainTitle}" Grid.Row="0"/>
        
        <!-- SubtÃ­tulo -->
        <TextBlock Text="Lista de Productos" Style="{StaticResource SubTitle}" Grid.Row="1"/>

        <!-- Tabla de productos -->
        <DataGrid x:Name="DgProductos" 
                  Grid.Row="2" 
                  Margin="0,20,0,0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  RowHeight="80">
            <DataGrid.Columns>
                <!-- Columna de Imagen -->
                <DataGridTemplateColumn Header="Imagen" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="8" 
                                    Width="70" 
                                    Height="70" 
                                    Background="#F0F0F0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Grid>
                                    <Image Source="{Binding ImageUrl, Converter={StaticResource ImageUrlConverter}}" 
                                           Stretch="UniformToFill"
                                           StretchDirection="Both">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImageUrl}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImageUrl}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                    <!-- Placeholder cuando no hay imagen -->
                                    <TextBlock Text="ðŸ“¦" 
                                               FontSize="32"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#999">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImageUrl}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImageUrl}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding PrecioVenta, StringFormat=C2}" Width="150"/>
                <DataGridTemplateColumn Header="Formas de Pago" Width="300">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Efectivo" 
                                        Background="{StaticResource GreenButtonBrush}"
                                        Foreground="Black"
                                        Padding="20,8"
                                        Margin="5,0"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnEfectivo_Click"
                                        Tag="{Binding}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="20"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="CrÃ©dito Directo" 
                                        Background="#FFD700"
                                        Foreground="Black"
                                        Padding="20,8"
                                        Margin="5,0"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnCredito_Click"
                                        Tag="{Binding}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="20"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- BotÃ³n Volver -->
        <Button Content="Volver" 
                Grid.Row="3"
                Style="{StaticResource PillButton}"
                Background="{StaticResource GrayButtonBrush}"
                Width="200"
                Margin="0,20,0,0"
                Click="BtnVolver_Click"/>
    </Grid>
</Window>
