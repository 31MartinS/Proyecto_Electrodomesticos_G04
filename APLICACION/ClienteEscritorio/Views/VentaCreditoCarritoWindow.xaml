                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="â„¹ï¸ InformaciÃ³n" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                <TextBlock Text="â€¢ Se consultarÃ¡ la central de riesgos del banco" 
                           FontSize="11" 
                           TextWrapping="Wrap"
                           Foreground="#666"/>
                <TextBlock Text="â€¢ La aprobaciÃ³n depende de su historial crediticio" 
                           FontSize="11" 
                           TextWrapping="Wrap"
                           Foreground="#666"
                           Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button x:Name="BtnProcesar"
                    Content="Evaluar CrÃ©dito" 
                    Background="#FFD700"
                    Foreground="Black"
                    Padding="30,12"
                    Margin="0,0,10,0"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="Bold"
                    FontSize="14"
                    Click="BtnProcesar_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Cancelar" 
                    Style="{StaticResource PillButton}"
                    Background="{StaticResource GrayButtonBrush}"
                    Padding="30,12"
                    FontSize="14"
                    Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
