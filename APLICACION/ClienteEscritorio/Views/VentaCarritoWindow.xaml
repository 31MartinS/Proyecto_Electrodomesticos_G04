<Window x:Class="ClienteEscritorio.Views.VentaCarritoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ClienteEscritorio.Converters"
        Title="Carrito de Compras" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded">
    <Window.Resources>
        <converters:ImageUrlConverter x:Key="ImageUrlConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Columna Izquierda: Productos Disponibles -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Productos Disponibles" Style="{StaticResource SubTitle}" Grid.Row="0"/>

            <DataGrid x:Name="DgProductos" 
                      Grid.Row="1" 
                      Margin="0,10,0,0"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      RowHeight="100">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Imagen" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" 
                                        Width="60" 
                                        Height="60" 
                                        Background="#F0F0F0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Grid>
                                        <Image Source="{Binding ImageUrl, Converter={StaticResource ImageUrlConverter}}" 
                                               Stretch="UniformToFill">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ImageUrl}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ImageUrl}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="ðŸ“¦" 
                                                   FontSize="24"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="#999">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ImageUrl}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ImageUrl}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Precio" Binding="{Binding PrecioVenta, StringFormat=C2}" Width="100"/>
                    <DataGridTemplateColumn Header="Agregar" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBox x:Name="TxtCantidad" 
                                             Width="50" 
                                             Text="1" 
                                             TextAlignment="Center"
                                             VerticalContentAlignment="Center"
                                             Margin="0,0,5,0"/>
                                    <Button Content="+" 
                                            Background="{StaticResource BlueButtonBrush}"
                                            Foreground="White"
                                            Padding="15,5"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="BtnAgregarCarrito_Click"
                                            Tag="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="15"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Columna Derecha: Carrito -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="ðŸ›’ Carrito de Compras" Style="{StaticResource SubTitle}" Grid.Row="0"/>

            <!-- Lista del carrito -->
            <ListView x:Name="LvCarrito" 
                      Grid.Row="1" 
                      Margin="0,10,0,0"
                      BorderBrush="#DDD"
                      BorderThickness="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="5" Margin="0,0,0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Nombre}" FontWeight="Bold" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,3,0,0">
                                    <TextBlock Text="Cantidad: " FontSize="11" Foreground="#666"/>
                                    <TextBlock Text="{Binding Cantidad}" FontSize="11" FontWeight="Bold"/>
                                    <TextBlock Text=" x " FontSize="11" Foreground="#666" Margin="5,0"/>
                                    <TextBlock Text="{Binding Precio, StringFormat=C2}" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,3,0,0">
                                    <TextBlock Text="Subtotal: " FontSize="12" Foreground="#666"/>
                                    <TextBlock Text="{Binding Subtotal, StringFormat=C2}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource BlueButtonBrush}"/>
                                    <Button Content="âœ–" 
                                            Background="#FF4444"
                                            Foreground="White"
                                            FontSize="10"
                                            Padding="5,2"
                                            Margin="10,0,0,0"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="BtnEliminarItem_Click"
                                            Tag="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Total -->
            <Border Grid.Row="2" Background="#F8F8F8" Padding="10" Margin="0,10,0,0" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="TOTAL:" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtTotal" Text="$0.00" FontSize="24" FontWeight="Bold" Foreground="{StaticResource BlueButtonBrush}"/>
                </StackPanel>
            </Border>

            <!-- Botones de acciÃ³n -->
            <StackPanel Grid.Row="3" Margin="0,15,0,0">
                <Button Content="ðŸ’µ Pagar en Efectivo" 
                        Background="{StaticResource GreenButtonBrush}"
                        Foreground="Black"
                        Padding="10"
                        Margin="0,0,0,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Click="BtnPagarEfectivo_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="ðŸ’³ Pagar a CrÃ©dito" 
                        Background="#FFD700"
                        Foreground="Black"
                        Padding="10"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Click="BtnPagarCredito_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- BotÃ³n Volver -->
            <Button Content="Volver" 
                    Grid.Row="4"
                    Style="{StaticResource PillButton}"
                    Background="{StaticResource GrayButtonBrush}"
                    Margin="0,15,0,0"
                    Click="BtnVolver_Click"/>
        </Grid>
    </Grid>
</Window>
